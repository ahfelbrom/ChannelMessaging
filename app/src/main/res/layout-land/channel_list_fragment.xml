<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <fragment
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/fragmentA_ID"
            android:name="fragmentPackage.ChannelListFragment"
            tools:layout="@layout/channel_list_fragment" />
        <fragment
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:id="@+id/fragmentB_ID"
            android:layout_gravity="center_vertical"
            android:name="fragmentPackage.MessageFragment"
            tools:layout="@layout/channel_fragment" />
    </LinearLayout>

</LinearLayout>